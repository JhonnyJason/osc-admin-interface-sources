.settingspage
    position fixed
    width 100%
    height 100vh
    z-index 200
    overflow: hidden
    background-color cd-darkgrey
    transition all 0.3s
    transform translateX(-102%)
    opacity: 0

.here
    .settingspage
        transform translateX(0)
        opacity 1

.settingspage-right
    position: fixed
    top 0
    right 0
    width 50px
    height 100vh
    padding 15px 10px
    box-sizing: border-box
    background-color: cd-verydark
    svg
        width: 30px
        height 30px

.settingspage-content
    position absolute
    bottom 15px
    left 15px
    height calc(100vh - 85px)
    width calc(100% - 30px)
    overflow hidden

.settingspage-title
    text-align: left
    font-size: 20pt
    margin-bottom 30px
