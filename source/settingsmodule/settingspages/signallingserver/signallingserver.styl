.settingspage
    position fixed
    width 100%
    height 100vh
    z-index 200
    overflow: hidden
    background-color cd-darkgrey
    transition transform 0.3s
    transform translateX(-102%)

.settingspage.here
    transform translateX(0)

.settingspage-right
    position: fixed
    top 0
    right 0
    width 70px
    height 100vh
    padding 15px
    box-sizing: border-box
    background-color: cd-verydark
    svg
        width: 40px
        height 40px

.settingspage-content
    position absolute
    bottom 15px
    left 15px
    height calc(100vh - 85px)
    width calc(100% - 30px)
    overflow hidden

.settingspage-title
    text-align: left
    font-size: 20pt
    margin-bottom 30px

#signalling-server-input
    width 100%
    padding 7px
    box-sizing: border-box
    border none
    overflow hidden
    text-overflow: ellipsis
    border solid 3px rgb(69, 212, 69)

#signalling-server-input:focus
    width 100%
    background-color white

#signalling-server-works-indicator
    color rgb(69, 212, 69)
    text-align left
    margin-top 10px
    margin-bottom 30px


#signalling-server-button-container
    display: flex
    justify-content: space-between
    margin-bottom 30px

    .click-button
        background-color grey
        font-weight bold
        min-width 120px
        padding 10px
        border-radius: 3px



#signalling-server-explaination-text
    text-align: left